{
  "manifest_version": 3,
  "name": "Gemini Tab Titles",
  "version": "1.1",
  "description": "Shows conversation titles in Gemini tab titles",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Tabs"
  },
  "content_scripts": [{
    "matches": ["https://gemini.google.com/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
